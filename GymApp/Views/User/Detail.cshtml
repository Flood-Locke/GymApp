@using GymApp.ViewModels
@model UserDetailViewModel

<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/users"> GymGoers</a>
                        </li>

                        <li class="breadcrumb-item active" aria-current="page">Profile</li>
                    </ol>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </nav>
    <section class="bg-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8">
                    <div class="media">
                        <img alt="Image" src="@Model.ProfileImageUrl" class="mr-md-5 avatar avatar-xlg">
                        <div class="media-body">
                            <div class="mb-3">
                                <h1 class="h2 mb-2">@Model.UserName</h1>
                                <span class="text-muted"><i class="icon-location"></i>@Model.Location</span>
                            </div>
                            <p class="text-muted">Years of Experience: @Model.YearsOfExperience</p>
                            <p>
                                I lift stuff up and down; hard.
                            </p>
                            <div>
                                <button class="btn btn-outline-primary" data-toggle="button"><i class="icon-add-user"></i> Follow</button>
                                <button class="btn btn-outline-primary">
                                    <i class="icon-mail"></i>
                                </button>
                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-outline-primary dropdown-toggle dropdown-toggle-no-arrow" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="icon-dots-three-horizontal"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-sm" aria-labelledby="dropdownMenuButton" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 36px, 0px);">
                                        <a class="dropdown-item" href="#">Add to group</a>
                                        <a class="dropdown-item" href="#">Share Profile</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Block</a>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
    <section class="flush-with-above space-0">
        <div class="bg-white">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">aria-controls="workoutProgram"
                                <a class="nav-link active" id="workoutProgram-tab" data-toggle="tab" href="#workoutProgram" role="tab"  aria-selected="true">Workout Program</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="groups-tab" data-toggle="tab" href="#gyms" role="tab" aria-controls="gyms" aria-selected="false">Gyms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="followers-tab" data-toggle="tab" href="#followers" role="tab" aria-controls="followers" aria-selected="false">Followers</a>
                            </li>
                        </ul>
                    </div>
                    <!--end of col-->
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
        </div>
    </section>
    <section class="flush-with-above">
        <div class="tab-content">
            <div class="tab-pane fade active show" id="workoutProgram" role="tabpanel" aria-labelledby="workoutProgram-tab">
                <div class="container">
                    <ul class="row feature-list feature-list-sm">                     
                        <li class="col-12 col-md-6 col-lg-4">
                            <div class="card">
                                <a type="button" asp-controller="WorkoutProgram" asp-action="Index"> 
                                    <img class="card-img-top" src="/img/barbell.jpg" alt="Card image cap">
                                </a>
                                <div class="card-body">
                                    <a href="">
                                        <h4 class="card-title">Workout Programs</h4>
                                        <p class="card-text text-body">Easy to follow programs</p>
                                    </a>
                                </div>
                                <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                    <div class="text-small">
                                        <ul class="list-inline">
                                            <li class="list-inline-item"><i class="icon-heart mr-1"></i> 221</li>
                                            <li class="list-inline-item"><i class="icon-message mr-1"></i> 14</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <!--end of col-->

                    </ul>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </div>

            <div class="tab-pane fade" id="gyms" role="tabpanel" aria-labelledby="groups-tab">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-4 d-flex">
                            <div class="card">
                                <a type="button" asp-controller="Gym" asp-action="Index">
                                    <img class="card-img-top" src="/img/kettlebell.jpg" alt="Card image cap">
                                </a>
                                <div class="card-body">
                                    <a href="#" class="d-block mb-2">
                                        <h4>Pitstop</h4>
                                    </a>
                                    <span>Hardcore Gyms</span>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><i class="icon-users">&nbsp;</i> 18 members</li>
                                </ul>
                                <div class="card-footer d-flex align-items-center">
                                    <div>
                                        <ul class="list-inline list-spacing-sm">

                                            <li class="list-inline-item">
                                                <img alt="Group member" class="avatar avatar-xs" src="/img/avatar-male-1.jpg">
                                            </li>

                                            <li class="list-inline-item">
                                                <img alt="Group member" class="avatar avatar-xs" src="/img/avatar-female-1.jpg">
                                            </li>

                                            <li class="list-inline-item">
                                                <img alt="Group member" class="avatar avatar-xs" src="/img/avatar-male-2.jpg">
                                            </li>

                                            <li class="list-inline-item">
                                                <img alt="Group member" class="avatar avatar-xs" src="/img/avatar-female-2.jpg">
                                            </li>
                                        </ul>
                                    </div>
                                    <span class="text-small ml-2">+ 14 more</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </div>

            <div class="tab-pane fade" id="followers" role="tabpanel" aria-labelledby="followers-tab">
                <div class="container">
                    <div class="row">

                        <div class="col-12 col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="media">
                                        <a class="btn btn-outline-primary" asp-controller="User" asp-action="Index">
                                            <img alt="Daniel Cameron" src="/img/avatar-male-1.jpg" class="avatar">
                                        </a>
                                        <div class="media-body">
                                            <div>
                                                <a href="#" class="h5 m-0">
                                                    <h5>Daniel Cameron</h5>
                                                </a>
                                                <small class="text-muted"><i class="icon-location"></i> Galway, Ireland</small>
                                            </div>
                                            <ul class="list-inline">

                                                <li class="list-inline-item text-small">196 Followers</li>

                                                <li class="list-inline-item text-small">186 Following</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-between align-items-center">
                                    <a class="text-small" href="#">cameronman</a>
                                    <button class="btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Follow">
                                        <i class="icon-add-user"></i>
                                    </button>
                                </div>
                            </div>
                            <!-- end card -->
                        </div>                          
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </div>
        </div>
    </section>
    <!--end of section-->
</div>